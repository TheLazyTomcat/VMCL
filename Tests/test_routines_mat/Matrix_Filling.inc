Function Matrix_Filling(AutoTest: Boolean = False): Integer;
var
  m2s:  TMatrix2s;
  m3s:  TMatrix3s;
  m4s:  TMatrix4s;
  m2d:  TMatrix2d;
  m3d:  TMatrix3d;
  m4d:  TMatrix4d;
  Idx:  Integer;
  sv:   Single;
  dv:   Double;
begin
WriteLn;
WriteLn(LineText('Matrix filling'));
RandomMat(m2s); RandomMat(m3s); RandomMat(m4s);
RandomMat(m2d); RandomMat(m3d); RandomMat(m4d);
WriteLn; Idx := Random(2); sv := Random(100);
WriteLn('MatrixFillRow(m2s):'); WriteLn; Write(MatToStr(m2s)); WriteLn(Format(' (%d) <- %f',[Idx,sv]));
MatrixFillRow(m2s,Idx,sv); WriteLn; WriteLn(MatToStr(m2s));
WriteLn; Idx := Random(3); sv := Random(100);
WriteLn('MatrixFillRow(m3s):'); WriteLn; Write(MatToStr(m3s)); WriteLn(Format(' (%d) <- %f',[Idx,sv]));
MatrixFillRow(m3s,Idx,sv); WriteLn; WriteLn(MatToStr(m3s));
WriteLn; Idx := Random(4); sv := Random(100);
WriteLn('MatrixFillRow(m4s):'); WriteLn; Write(MatToStr(m4s)); WriteLn(Format(' (%d) <- %f',[Idx,sv]));
MatrixFillRow(m4s,Idx,sv); WriteLn; WriteLn(MatToStr(m4s));
WriteLn; Idx := Random(2); dv := Random(100);
WriteLn('MatrixFillRow(m2d):'); WriteLn; Write(MatToStr(m2d)); WriteLn(Format(' (%d) <- %f',[Idx,dv]));
MatrixFillRow(m2d,Idx,dv); WriteLn; WriteLn(MatToStr(m2d));
WriteLn; Idx := Random(3); dv := Random(100);
WriteLn('MatrixFillRow(m3d):'); WriteLn; Write(MatToStr(m3d)); WriteLn(Format(' (%d) <- %f',[Idx,dv]));
MatrixFillRow(m3d,Idx,dv); WriteLn; WriteLn(MatToStr(m3d));
WriteLn; Idx := Random(4); dv := Random(100);
WriteLn('MatrixFillRow(m4d):'); WriteLn; Write(MatToStr(m4d)); WriteLn(Format(' (%d) <- %f',[Idx,dv]));
MatrixFillRow(m4d,Idx,dv); WriteLn; WriteLn(MatToStr(m4d));
WriteLn;
WriteLn(Splitter);
RandomMat(m2s); RandomMat(m3s); RandomMat(m4s);
RandomMat(m2d); RandomMat(m3d); RandomMat(m4d);
WriteLn; Idx := Random(2); sv := Random(100);
WriteLn('MatrixFillColumn(m2s):'); WriteLn; Write(MatToStr(m2s)); WriteLn(Format(' (%d) <- %f',[Idx,sv]));
MatrixFillColumn(m2s,Idx,sv); WriteLn; WriteLn(MatToStr(m2s));
WriteLn; Idx := Random(3); sv := Random(100);
WriteLn('MatrixFillColumn(m3s):'); WriteLn; Write(MatToStr(m3s)); WriteLn(Format(' (%d) <- %f',[Idx,sv]));
MatrixFillColumn(m3s,Idx,sv); WriteLn; WriteLn(MatToStr(m3s));
WriteLn; Idx := Random(4); sv := Random(100);
WriteLn('MatrixFillColumn(m4s):'); WriteLn; Write(MatToStr(m4s)); WriteLn(Format(' (%d) <- %f',[Idx,sv]));
MatrixFillColumn(m4s,Idx,sv); WriteLn; WriteLn(MatToStr(m4s));
WriteLn; Idx := Random(2); dv := Random(100);
WriteLn('MatrixFillColumn(m2d):'); WriteLn; Write(MatToStr(m2d)); WriteLn(Format(' (%d) <- %f',[Idx,dv]));
MatrixFillColumn(m2d,Idx,dv); WriteLn; WriteLn(MatToStr(m2d));
WriteLn; Idx := Random(3); dv := Random(100);
WriteLn('MatrixFillColumn(m3d):'); WriteLn; Write(MatToStr(m3d)); WriteLn(Format(' (%d) <- %f',[Idx,dv]));
MatrixFillColumn(m3d,Idx,dv); WriteLn; WriteLn(MatToStr(m3d));
WriteLn; Idx := Random(4); dv := Random(100);
WriteLn('MatrixFillColumn(m4d):'); WriteLn; Write(MatToStr(m4d)); WriteLn(Format(' (%d) <- %f',[Idx,dv]));
MatrixFillColumn(m4d,Idx,dv); WriteLn; WriteLn(MatToStr(m4d));
WriteLn;
WriteLn(Splitter);
RandomMat(m2s); RandomMat(m3s); RandomMat(m4s);
RandomMat(m2d); RandomMat(m3d); RandomMat(m4d);
WriteLn; sv := Random(100);
WriteLn('MatrixFill(m2s):'); WriteLn; Write(MatToStr(m2s)); WriteLn(Format(' <- %f',[sv]));
MatrixFill(m2s,sv); WriteLn; WriteLn(MatToStr(m2s));
WriteLn; sv := Random(100);
WriteLn('MatrixFill(m3s):'); WriteLn; Write(MatToStr(m3s)); WriteLn(Format(' <- %f',[sv]));
MatrixFill(m3s,sv); WriteLn; WriteLn(MatToStr(m3s));
WriteLn; sv := Random(100);
WriteLn('MatrixFill(m4s):'); WriteLn; Write(MatToStr(m4s)); WriteLn(Format(' <- %f',[sv]));
MatrixFill(m4s,sv); WriteLn; WriteLn(MatToStr(m4s));
WriteLn; dv := Random(100);
WriteLn('MatrixFill(m2d):'); WriteLn; Write(MatToStr(m2d)); WriteLn(Format(' <- %f',[dv]));
MatrixFill(m2d,dv); WriteLn; WriteLn(MatToStr(m2d));
WriteLn; dv := Random(100);
WriteLn('MatrixFill(m3d):'); WriteLn; Write(MatToStr(m3d)); WriteLn(Format(' <- %f',[dv]));
MatrixFill(m3d,dv); WriteLn; WriteLn(MatToStr(m3d));
WriteLn; dv := Random(100);
WriteLn('MatrixFill(m4d):'); WriteLn; Write(MatToStr(m4d)); WriteLn(Format(' <- %f',[dv]));
MatrixFill(m4d,dv); WriteLn; WriteLn(MatToStr(m4d));
Result := 0;
end;