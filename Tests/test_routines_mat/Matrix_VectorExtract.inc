Function Matrix_VectorExtract({%H-}AutoTest: Boolean = False): Integer;
var
  m2s:  TVMCLMatrix2s;
  m3s:  TVMCLMatrix3s;
  m4s:  TVMCLMatrix4s;
  m2d:  TVMCLMatrix2d;
  m3d:  TVMCLMatrix3d;
  m4d:  TVMCLMatrix4d;
  Idx:  Integer;
begin
WriteLn;
WriteLn(LineText('Matrix vector extraction'));
RandomMat(m2s); RandomMat(m3s); RandomMat(m4s);
RandomMat(m2d); RandomMat(m3d); RandomMat(m4d);
WriteLn; Idx := Random(2);
WriteLn('MatrixGetRow(m2s):'); WriteLn; Write(MatToStr(m2s));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetRow(m2s,Idx)));
WriteLn; Idx := Random(3);
WriteLn('MatrixGetRow(m3s):'); WriteLn; Write(MatToStr(m3s));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetRow(m3s,Idx)));
WriteLn; Idx := Random(4);
WriteLn('MatrixGetRow(m4s):'); WriteLn; Write(MatToStr(m4s));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetRow(m4s,Idx)));
WriteLn; Idx := Random(2);
WriteLn('MatrixGetRow(m2d):'); WriteLn; Write(MatToStr(m2d));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetRow(m2d,Idx)));
WriteLn; Idx := Random(3);
WriteLn('MatrixGetRow(m3d):'); WriteLn; Write(MatToStr(m3d));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetRow(m3d,Idx)));
WriteLn; Idx := Random(4);
WriteLn('MatrixGetRow(m4d):'); WriteLn; Write(MatToStr(m4d));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetRow(m4d,Idx)));
WriteLn;
WriteLn(Splitter);
RandomMat(m2s); RandomMat(m3s); RandomMat(m4s);
RandomMat(m2d); RandomMat(m3d); RandomMat(m4d);
WriteLn; Idx := Random(2);
WriteLn('MatrixGetColumn(m2s):'); WriteLn; Write(MatToStr(m2s));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetColumn(m2s,Idx)));
WriteLn; Idx := Random(3);
WriteLn('MatrixGetColumn(m3s):'); WriteLn; Write(MatToStr(m3s));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetColumn(m3s,Idx)));
WriteLn; Idx := Random(4);
WriteLn('MatrixGetColumn(m4s):'); WriteLn; Write(MatToStr(m4s));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetColumn(m4s,Idx)));
WriteLn; Idx := Random(2);
WriteLn('MatrixGetColumn(m2d):'); WriteLn; Write(MatToStr(m2d));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetColumn(m2d,Idx)));
WriteLn; Idx := Random(3);
WriteLn('MatrixGetColumn(m3d):'); WriteLn; Write(MatToStr(m3d));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetColumn(m3d,Idx)));
WriteLn; Idx := Random(4);
WriteLn('MatrixGetColumn(m4d):'); WriteLn; Write(MatToStr(m4d));
WriteLn(Format(' (%d) -> ',[Idx]) +VecToStr(MatrixGetColumn(m4d,Idx)));
Result := 0;
end;
