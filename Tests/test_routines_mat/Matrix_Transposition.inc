Function Matrix_Transposition({%H-}AutoTest: Boolean = False): Integer;
var
  m2s:    TMatrix2s;
  m3s:    TMatrix3s;
  m4s:    TMatrix4s;
  m2d:    TMatrix2d;
  m3d:    TMatrix3d;
  m4d:    TMatrix4d;
begin
WriteLn;
WriteLn(LineText('Matrix transpostion'));
WriteLn;
RandomMat(m2s); RandomMat(m3s); RandomMat(m4s);
RandomMat(m2d); RandomMat(m3d); RandomMat(m4d);
WriteLn;
WriteLn('Transpose(m2s): '); WriteLn; WriteLn(MatToStr(m2s));
Transpose(m2s); WriteLn; WriteLn(MatToStr(m2s));
WriteLn;
WriteLn('Transpose(m3s): '); WriteLn; WriteLn(MatToStr(m3s));
Transpose(m3s); WriteLn; WriteLn(MatToStr(m3s));
WriteLn;
WriteLn('Transpose(m4s): '); WriteLn; WriteLn(MatToStr(m4s));
Transpose(m4s); WriteLn; WriteLn(MatToStr(m4s));
WriteLn;
WriteLn('Transpose(m2d): '); WriteLn; WriteLn(MatToStr(m2d));
Transpose(m2d); WriteLn; WriteLn(MatToStr(m2d));
WriteLn;
WriteLn('Transpose(m3d): '); WriteLn; WriteLn(MatToStr(m3d));
Transpose(m3d); WriteLn; WriteLn(MatToStr(m3d));
WriteLn;
WriteLn('Transpose(m4d): '); WriteLn; WriteLn(MatToStr(m4d));
Transpose(m4d); WriteLn; WriteLn(MatToStr(m4d));
WriteLn;
WriteLn(Splitter);
RandomMat(m2s); RandomMat(m3s); RandomMat(m4s);
RandomMat(m2d); RandomMat(m3d); RandomMat(m4d);
WriteLn;
WriteLn('Transposed(m2s): '); WriteLn; WriteLn(MatToStr(m2s));
WriteLn; WriteLn(MatToStr(Transposed(m2s)));
WriteLn;
WriteLn('Transposed(m3s): '); WriteLn; WriteLn(MatToStr(m3s));
WriteLn; WriteLn(MatToStr(Transposed(m3s)));
WriteLn;
WriteLn('Transposed(m4s): '); WriteLn; WriteLn(MatToStr(m4s));
WriteLn; WriteLn(MatToStr(Transposed(m4s)));
WriteLn;
WriteLn('Transposed(m2d): '); WriteLn; WriteLn(MatToStr(m2d));
WriteLn; WriteLn(MatToStr(Transposed(m2d)));
WriteLn;
WriteLn('Transposed(m3d): '); WriteLn; WriteLn(MatToStr(m3d));
WriteLn; WriteLn(MatToStr(Transposed(m3d)));
WriteLn;
WriteLn('Transposed(m4d): '); WriteLn; WriteLn(MatToStr(m4d));
WriteLn; WriteLn(MatToStr(Transposed(m4d)));
Result := 0;
end;
