Function Vector_Build(AutoTest: Boolean = False): Integer;
var
  Xs,Ys,Zs,Ws:  Single;
  Xd,Yd,Zd,Wd:  Double;
begin
WriteLn;
WriteLn(LineText('Vector building'));
Xs := Random(100); Ys := Random(100); Zs := Random(100); Ws := Random(100);
Xd := Random(100); Yd := Random(100); Zd := Random(100); Wd := Random(100);
WriteLn;
WriteLn(Format('Xs = %f  Ys = %f  Zs = %f  Ws = %f',[Xs,Ys,Zs,Ws]));
WriteLn;
WriteLn('Vector2s(X,Y): ' + VecToStr(Vector2s(Xs,Ys)));
WriteLn;
WriteLn('Vector3s(X,Y,Z): ' + VecToStr(Vector3s(Xs,Ys,Zs)));
WriteLn;
WriteLn('Vector3s(v2s,Z): ' + VecToStr(Vector3s(Vector2s(Xs,Ys),Zs)));
WriteLn;
WriteLn('Vector3s(X,v2s): ' + VecToStr(Vector3s(Xs,Vector2s(Ys,Zs))));
WriteLn;
WriteLn('Vector4s(X,Y,Z,W): ' + VecToStr(Vector4s(Xs,Ys,Zs,Ws)));
WriteLn;
WriteLn('Vector4s(v2s,v2s): ' + VecToStr(Vector4s(Vector2s(Xs,Ys),Vector2s(Zs,Ws))));
WriteLn;
WriteLn('Vector4s(v2s,Z,W): ' + VecToStr(Vector4s(Vector2s(Xs,Ys),Zs,Ws)));
WriteLn;
WriteLn('Vector4s(X,v2s,W): ' + VecToStr(Vector4s(Xs,Vector2s(Ys,Zs),Ws)));
WriteLn;
WriteLn('Vector4s(X,Y,v2s): ' + VecToStr(Vector4s(Xs,Ys,Vector2s(Zs,Ws))));
WriteLn;
WriteLn('Vector4s(v3s,W):   ' + VecToStr(Vector4s(Vector3s(Xs,Ys,Zs),Ws)));
WriteLn;
WriteLn('Vector4s(X,v3s):   ' + VecToStr(Vector4s(Xs,Vector3s(Ys,Zs,Ws))));
WriteLn;
WriteLn(Format('Xd = %f  Yd = %f  Zd = %f  Wd = %f',[Xd,Yd,Zd,Wd]));
WriteLn;
WriteLn('Vector2d(X,Y): ' + VecToStr(Vector2d(Xd,Yd)));
WriteLn;
WriteLn('Vector3d(X,Y,Z): ' + VecToStr(Vector3d(Xd,Yd,Zd)));
WriteLn;
WriteLn('Vector3d(v2s,Z): ' + VecToStr(Vector3d(Vector2d(Xd,Yd),Zd)));
WriteLn;
WriteLn('Vector3d(X,v2s): ' + VecToStr(Vector3d(Xd,Vector2d(Yd,Zd))));
WriteLn;
WriteLn('Vector4d(X,Y,Z,W): ' + VecToStr(Vector4d(Xd,Yd,Zd,Wd)));
WriteLn;
WriteLn('Vector4d(v2s,v2s): ' + VecToStr(Vector4d(Vector2d(Xd,Yd),Vector2d(Zd,Wd))));
WriteLn;
WriteLn('Vector4d(v2s,Z,W): ' + VecToStr(Vector4d(Vector2d(Xd,Yd),Zd,Wd)));
WriteLn;
WriteLn('Vector4d(X,v2s,W): ' + VecToStr(Vector4d(Xd,Vector2d(Yd,Zd),Wd)));
WriteLn;
WriteLn('Vector4d(X,Y,v2s): ' + VecToStr(Vector4d(Xd,Yd,Vector2d(Zd,Wd))));
WriteLn;
WriteLn('Vector4d(v3s,W):   ' + VecToStr(Vector4d(Vector3d(Xd,Yd,Zd),Wd)));
WriteLn;
WriteLn('Vector4d(X,v3s):   ' + VecToStr(Vector4d(Xd,Vector3d(Yd,Zd,Wd))));
Result := 0;
end;