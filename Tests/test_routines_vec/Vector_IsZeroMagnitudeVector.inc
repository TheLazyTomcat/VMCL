Function Vector_IsZeroMagnitudeVector(AutoTest: Boolean = False): Integer;
var
  v2s:  TVector2s;
  v3s:  TVector3s;
  v4s:  TVector4s;
  v2d:  TVector2d;
  v3d:  TVector3d;
  v4d:  TVector4d;
begin
WriteLn;
WriteLn(LineText('IsZeroMagnitudeVector'));
RandomVec(v2s); RandomVec(v3s); RandomVec(v4s);
RandomVec(v2d); RandomVec(v3d); RandomVec(v4d);
WriteLn; Write('v2s:      '+ VecToStr(v2s) + ' ' + BoolToStr(IsZeroMagnitudeVector(v2s),True) + ' -> ');
v2s[Random(Length(v2s))] := 0;
WriteLn(VecToStr(v2s) + ' ' + BoolToStr(IsZeroMagnitudeVector(v2s),True));
WriteLn; Write('v3s:      '+ VecToStr(v3s) + ' ' + BoolToStr(IsZeroMagnitudeVector(v3s),True) + ' -> ');
v3s[Random(Length(v3s))] := 0;
WriteLn(VecToStr(v3s) + ' ' + BoolToStr(IsZeroMagnitudeVector(v3s),True));
WriteLn; Write('v4s:      '+ VecToStr(v4s) + ' ' + BoolToStr(IsZeroMagnitudeVector(v4s),True) + ' -> ');
v4s[Random(Length(v4s))] := 0;
WriteLn(VecToStr(v4s) + ' ' + BoolToStr(IsZeroMagnitudeVector(v4s),True));
RandomVec(v4s);
WriteLn; Write('v4s(XYZ): '+ VecToStr(v4s) + ' ' + BoolToStr(IsZeroMagnitudeVectorXYZ(v4s),True) + ' -> ');
v4s[Random(Pred(Length(v4s)))] := 0;
WriteLn(VecToStr(v4s) + ' ' + BoolToStr(IsZeroMagnitudeVectorXYZ(v4s),True));
WriteLn; Write('v2d:      '+ VecToStr(v2d) + ' ' + BoolToStr(IsZeroMagnitudeVector(v2d),True) + ' -> ');
v2d[Random(Length(v2d))] := 0;
WriteLn(VecToStr(v2d) + ' ' + BoolToStr(IsZeroMagnitudeVector(v2d),True));
WriteLn; Write('v3d:      '+ VecToStr(v3d) + ' ' + BoolToStr(IsZeroMagnitudeVector(v3d),True) + ' -> ');
v3d[Random(Length(v3d))] := 0;
WriteLn(VecToStr(v3d) + ' ' + BoolToStr(IsZeroMagnitudeVector(v3d),True));
WriteLn; Write('v4d:      '+ VecToStr(v4d) + ' ' + BoolToStr(IsZeroMagnitudeVector(v4d),True) + ' -> ');
v4d[Random(Length(v4d))] := 0;
WriteLn(VecToStr(v4d) + ' ' + BoolToStr(IsZeroMagnitudeVector(v4d),True));
RandomVec(v4d);
WriteLn; Write('v4d(XYZ): '+ VecToStr(v4d) + ' ' + BoolToStr(IsZeroMagnitudeVectorXYZ(v4d),True) + ' -> ');
v4d[Random(Pred(Length(v4d)))] := 0;
WriteLn(VecToStr(v4d) + ' ' + BoolToStr(IsZeroMagnitudeVectorXYZ(v4d),True));
Result := 0;
end;