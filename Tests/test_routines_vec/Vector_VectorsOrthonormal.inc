Function Vector_VectorsOrthonormal({%H-}AutoTest: Boolean = False): Integer;
var
  v2s1,v2s2:  TVector2s;
  v3s1,v3s2:  TVector3s;
  v4s1,v4s2:  TVector4s;
  v2d1,v2d2:  TVector2d;
  v3d1,v3d2:  TVector3d;
  v4d1,v4d2:  TVector4d;
  LFS:        TVMCLVectorFormat;
begin
LFS := VMCL_DefaultVectorFormat;
LFS.CommonFormat.ValueFormat.DecimalPlaces := 3;
WriteLn;
WriteLn(LineText('VectorsOrthonormal'));
RandomVec(v2s1); RandomVec(v3s1); RandomVec(v4s1);
RandomVec(v2d1); RandomVec(v3d1); RandomVec(v4d1);
RandomVec(v2s2); RandomVec(v3s2); RandomVec(v4s2);
RandomVec(v2d2); RandomVec(v3d2); RandomVec(v4d2);
WriteLn;
WriteLn('v2s: ' + VecToStr(v2s2) + ' > ' + VecToStr(v2s1) + ' -> ' + VecToStr(VectorsOrthonormal(v2s1,v2s2),LFS));
Write('(' + ValueToStr(VectorsAngleDeg(VectorsOrthonormal(v2s1,v2s2),v2s1),LFS.CommonFormat.ValueFormat));
WriteLn(', ' + ValueToStr(Magnitude(VectorsOrthonormal(v2s1,v2s2)),LFS.CommonFormat.ValueFormat) + ')');
WriteLn;
WriteLn('v3s: ' + VecToStr(v3s2) + ' > ' + VecToStr(v3s1) + ' -> ' + VecToStr(VectorsOrthogonal(v3s1,v3s2),LFS));
Write('(' + ValueToStr(VectorsAngleDeg(VectorsOrthogonal(v3s1,v3s2),v3s1),LFS.CommonFormat.ValueFormat));
WriteLn(', ' + ValueToStr(Magnitude(VectorsOrthonormal(v3s1,v3s2)),LFS.CommonFormat.ValueFormat) + ')');
WriteLn;
WriteLn('v4s: ' + VecToStr(v4s2) + ' > ' + VecToStr(v4s1) + ' -> ' + VecToStr(VectorsOrthogonal(v4s1,v4s2),LFS));
WriteLn('(' + ValueToStr(Magnitude(VectorsOrthonormal(v4s1,v4s2)),LFS.CommonFormat.ValueFormat) + ')');
WriteLn;
WriteLn('v4s(XYZ): ' + VecToStr(v4s2) + ' > ' + VecToStr(v4s1) + ' -> ' + VecToStr(VectorsOrthogonalXYZ(v4s1,v4s2),LFS));
Write('(' + ValueToStr(VectorsAngleDeg(VectorsOrthogonalXYZ(v4s1,v4s2),v4s1),LFS.CommonFormat.ValueFormat));
WriteLn(', ' + ValueToStr(MagnitudeXYZ(VectorsOrthonormalXYZ(v4s1,v4s2)),LFS.CommonFormat.ValueFormat) + ')');
WriteLn;
WriteLn('v2d: ' + VecToStr(v2d2) + ' > ' + VecToStr(v2d1) + ' -> ' + VecToStr(VectorsOrthogonal(v2d1,v2d2),LFS));
Write('(' + ValueToStr(VectorsAngleDeg(VectorsOrthogonal(v2d1,v2d2),v2d1),LFS.CommonFormat.ValueFormat));
WriteLn(', ' + ValueToStr(Magnitude(VectorsOrthonormal(v2d1,v2d2)),LFS.CommonFormat.ValueFormat) + ')');
WriteLn;
WriteLn('v3d: ' + VecToStr(v3d2) + ' > ' + VecToStr(v3d1) + ' -> ' + VecToStr(VectorsOrthogonal(v3d1,v3d2),LFS));
Write('(' + ValueToStr(VectorsAngleDeg(VectorsOrthogonal(v3d1,v3d2),v3d1),LFS.CommonFormat.ValueFormat) + ')');
WriteLn(', ' + ValueToStr(Magnitude(VectorsOrthonormal(v3d1,v3d2)),LFS.CommonFormat.ValueFormat) + ')');
WriteLn;
WriteLn('v4d: ' + VecToStr(v4d2) + ' > ' + VecToStr(v4d1) + ' -> ' + VecToStr(VectorsOrthogonal(v4d1,v4d2),LFS));
WriteLn('(' + ValueToStr(Magnitude(VectorsOrthonormal(v4d1,v4d2)),LFS.CommonFormat.ValueFormat) + ')');
WriteLn;
WriteLn('v4d(XYZ): ' + VecToStr(v4d2) + ' > ' + VecToStr(v4d1) + ' -> ' + VecToStr(VectorsOrthogonalXYZ(v4d1,v4d2),LFS));
Write('(' + ValueToStr(VectorsAngleDeg(VectorsOrthogonalXYZ(v4d1,v4d2),v4d1),LFS.CommonFormat.ValueFormat));
WriteLn(', ' + ValueToStr(MagnitudeXYZ(VectorsOrthonormalXYZ(v4d1,v4d2)),LFS.CommonFormat.ValueFormat) + ')');
Result := 0;
end;
