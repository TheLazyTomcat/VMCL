Function Matrix_OrderConversions(AutoTest: Boolean = False): Integer;
var
  m2Rs:   TVMCLMatrix2RMs;
  m3Rs:   TVMCLMatrix3RMs;
  m4Rs:   TVMCLMatrix4RMs;
  m2Rd:   TVMCLMatrix2RMd;
  m3Rd:   TVMCLMatrix3RMd;
  m4Rd:   TVMCLMatrix4RMd;
  m2Cs:   TVMCLMatrix2CMs;
  m3Cs:   TVMCLMatrix3CMs;
  m4Cs:   TVMCLMatrix4CMs;
  m2Cd:   TVMCLMatrix2CMd;
  m3Cd:   TVMCLMatrix3CMd;
  m4Cd:   TVMCLMatrix4CMd;
begin
WriteLn;
WriteLn(LineText('Matrix order conversion'));
RandomMat(m2Rs); RandomMat(m3Rs); RandomMat(m4Rs);
RandomMat(m2Rd); RandomMat(m3Rd); RandomMat(m4Rd);
RandomMat(m2Cs); RandomMat(m3Cs); RandomMat(m4Cs);
RandomMat(m2Cd); RandomMat(m3Cd); RandomMat(m4Cd);
WriteLn;
WriteLn('Row-major -> Column-major:');
WriteLn;
WriteLn('m2s: '); WriteLn; WriteLn(MatToStr(m2Rs)); WriteLn; WriteLn(MatToStr(Matrix2(m2Rs)));
WriteLn;
WriteLn('m3s: '); WriteLn; WriteLn(MatToStr(m3Rs)); WriteLn; WriteLn(MatToStr(Matrix3(m3Rs)));
WriteLn;
WriteLn('m4s: '); WriteLn; WriteLn(MatToStr(m4Rs)); WriteLn; WriteLn(MatToStr(Matrix4(m4Rs)));
WriteLn;
WriteLn('m2d: '); WriteLn; WriteLn(MatToStr(m2Rd)); WriteLn; WriteLn(MatToStr(Matrix2(m2Rd)));
WriteLn;
WriteLn('m3d: '); WriteLn; WriteLn(MatToStr(m3Rd)); WriteLn; WriteLn(MatToStr(Matrix3(m3Rd)));
WriteLn;
WriteLn('m4d: '); WriteLn; WriteLn(MatToStr(m4Rd)); WriteLn; WriteLn(MatToStr(Matrix4(m4Rd)));
WriteLn;
WriteLn(Splitter);
WriteLn;
WriteLn('Column-major -> Row-major:');
WriteLn;
WriteLn('m2s: '); WriteLn; WriteLn(MatToStr(m2Cs)); WriteLn; WriteLn(MatToStr(Matrix2(m2Cs)));
WriteLn;
WriteLn('m3s: '); WriteLn; WriteLn(MatToStr(m3Cs)); WriteLn; WriteLn(MatToStr(Matrix3(m3Cs)));
WriteLn;
WriteLn('m4s: '); WriteLn; WriteLn(MatToStr(m4Cs)); WriteLn; WriteLn(MatToStr(Matrix4(m4Cs)));
WriteLn;
WriteLn('m2d: '); WriteLn; WriteLn(MatToStr(m2Cd)); WriteLn; WriteLn(MatToStr(Matrix2(m2Cd)));
WriteLn;
WriteLn('m3d: '); WriteLn; WriteLn(MatToStr(m3Cd)); WriteLn; WriteLn(MatToStr(Matrix3(m3Cd)));
WriteLn;
WriteLn('m4d: '); WriteLn; WriteLn(MatToStr(m4Cd)); WriteLn; WriteLn(MatToStr(Matrix4(m4Cd)));
Result := 0;
end;
