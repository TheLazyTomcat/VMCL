Function Matrix_SubmatrixWrite({%H-}AutoTest: Boolean = False): Integer;
var
  m2s1,m2s2:  TVMCLMatrix2s;
  m3s1,m3s2:  TVMCLMatrix3s;
  m4s1:       TVMCLMatrix4s;
  m2d1,m2d2:  TVMCLMatrix2d;
  m3d1,m3d2:  TVMCLMatrix3d;
  m4d1:       TVMCLMatrix4d;
  C,R:        Integer;
  CL,RL:      Integer;
  sRnd:       Single;
  dRnd:       Double;
begin
WriteLn;
WriteLn(LineText('Submatrix write access'));
RandomMat(m2s2); RandomMat(m3s1); RandomMat(m3s2); RandomMat(m4s1);
RandomMat(m2d2); RandomMat(m3d1); RandomMat(m3d2); RandomMat(m4d1);
WriteLn;
C := Random(3); R := Random(3);
WriteLn('SetSubmatrix2(m3s):'); WriteLn; Write(MatToStr(m3s1)); WriteLn(Format(' (%d, %d)',[R,C])); WriteLn; WriteLn(MatToStr(m2s2));
SetSubmatrix2(m3s1,m2s2,R,C); WriteLn; WriteLn(MatToStr(m3s1));
WriteLn;
C := Random(4); R := Random(4);
WriteLn('SetSubmatrix2(m4s):'); WriteLn; Write(MatToStr(m4s1)); WriteLn(Format(' (%d, %d)',[R,C])); WriteLn; WriteLn(MatToStr(m2s2));
SetSubmatrix2(m4s1,m2s2,R,C); WriteLn; WriteLn(MatToStr(m4s1));
WriteLn;
C := Random(4); R := Random(4);
WriteLn('SetSubmatrix3(m4s):'); WriteLn; Write(MatToStr(m4s1)); WriteLn(Format(' (%d, %d)',[R,C])); WriteLn; WriteLn(MatToStr(m3s2));
SetSubmatrix3(m4s1,m3s2,R,C); WriteLn; WriteLn(MatToStr(m4s1));
WriteLn;
C := Random(3); R := Random(3);
WriteLn('SetSubmatrix2(m3d):'); WriteLn; Write(MatToStr(m3d1)); WriteLn(Format(' (%d, %d)',[R,C])); WriteLn; WriteLn(MatToStr(m2d2));
SetSubmatrix2(m3d1,m2d2,R,C); WriteLn; WriteLn(MatToStr(m3d1));
WriteLn;
C := Random(4); R := Random(4);
WriteLn('SetSubmatrix2(m4d):'); WriteLn; Write(MatToStr(m4d1)); WriteLn(Format(' (%d, %d)',[R,C])); WriteLn; WriteLn(MatToStr(m2d2));
SetSubmatrix2(m4d1,m2d2,R,C); WriteLn; WriteLn(MatToStr(m4d1));
WriteLn;
C := Random(4); R := Random(4);
WriteLn('SetSubmatrix3(m4d):'); WriteLn; Write(MatToStr(m4d1)); WriteLn(Format(' (%d, %d)',[R,C])); WriteLn; WriteLn(MatToStr(m3d2));
SetSubmatrix3(m4d1,m3d2,R,C); WriteLn; WriteLn(MatToStr(m4d1));
WriteLn;
WriteLn(Splitter);
RandomMat(m2s1); RandomMat(m3s1); RandomMat(m4s1);
RandomMat(m2d1); RandomMat(m3d1); RandomMat(m4d1);
WriteLn;
C := Random(2); R := Random(2); CL := Random(2) + 1; RL := Random(2) + 1; sRnd := Random(100);
WriteLn('FillSubmatrix(m2s):'); WriteLn; Write(MatToStr(m2s1)); WriteLn(Format(' (%d, %d; %d, %d; %f)',[R,C,RL,CL,sRnd]));
WriteLn; FillSubmatrix(m2s1,R,C,RL,CL,sRnd); WriteLn(MatToStr(m2s1));
WriteLn;
C := Random(2); R := Random(2); CL := Random(2) + 1; RL := Random(2) + 1; sRnd := Random(100);
WriteLn('FillSubmatrix(m3s):'); WriteLn; Write(MatToStr(m3s1)); WriteLn(Format(' (%d, %d; %d, %d; %f)',[R,C,RL,CL,sRnd]));
WriteLn; FillSubmatrix(m3s1,R,C,RL,CL,sRnd); WriteLn(MatToStr(m3s1));
WriteLn;
C := Random(2); R := Random(2); CL := Random(2) + 1; RL := Random(2) + 1; sRnd := Random(100);
WriteLn('FillSubmatrix(m4s):'); WriteLn; Write(MatToStr(m4s1)); WriteLn(Format(' (%d, %d; %d, %d; %f)',[R,C,RL,CL,sRnd]));
WriteLn; FillSubmatrix(m4s1,R,C,RL,CL,sRnd); WriteLn(MatToStr(m4s1));
WriteLn;
C := Random(2); R := Random(2); CL := Random(2) + 1; RL := Random(2) + 1; dRnd := Random(100);
WriteLn('FillSubmatrix(m2d):'); WriteLn; Write(MatToStr(m2d1)); WriteLn(Format(' (%d, %d; %d, %d; %f)',[R,C,RL,CL,dRnd]));
WriteLn; FillSubmatrix(m2d1,R,C,RL,CL,dRnd); WriteLn(MatToStr(m2d1));
WriteLn;
C := Random(2); R := Random(2); CL := Random(2) + 1; RL := Random(2) + 1; dRnd := Random(100);
WriteLn('FillSubmatrix(m3d):'); WriteLn; Write(MatToStr(m3d1)); WriteLn(Format(' (%d, %d; %d, %d; %f)',[R,C,RL,CL,dRnd]));
WriteLn; FillSubmatrix(m3d1,R,C,RL,CL,dRnd); WriteLn(MatToStr(m3d1));
WriteLn;
C := Random(2); R := Random(2); CL := Random(2) + 1; RL := Random(2) + 1; dRnd := Random(100);
WriteLn('FillSubmatrix(m4d):'); WriteLn; Write(MatToStr(m4d1)); WriteLn(Format(' (%d, %d; %d, %d; %f)',[R,C,RL,CL,dRnd]));
WriteLn; FillSubmatrix(m4d1,R,C,RL,CL,dRnd); WriteLn(MatToStr(m4d1));
Result := 0;
end;
